	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<mapping type="one-way" wildcard="false">
		<class-a>com.drones4hire.dronesapp.models.dto.auth.RegistrationDTO</class-a>
		<class-b>com.drones4hire.dronesapp.models.db.users.User</class-b>

		<field>
			<a>firstName</a>
			<b>firstName</b>
		</field>
		<field>
			<a>lastName</a>
			<b>lastName</b>
		</field>
		<field>
			<a>username</a>
			<b>username</b>
		</field>
		<field>
			<a>email</a>
			<b>email</b>
		</field>
		<field>
			<a>password</a>
			<b>password</b>
		</field>
	</mapping>
	
	<mapping type="bi-directional" wildcard="false">
        <class-a>com.drones4hire.dronesapp.models.dto.AccountDTO</class-a>
        <class-b>com.drones4hire.dronesapp.models.db.users.User</class-b>

        <field>
            <a>id</a>
            <b>id</b>
        </field>
		<field>
            <a>username</a>
            <b>username</b>
        </field>
        <field>
            <a>email</a>
            <b>email</b>
        </field>
        <field>
            <a>firstName</a>
            <b>firstName</b>
        </field>
        <field>
            <a>lastName</a>
            <b>lastName</b>
        </field>
        <field>
            <a>location</a>
            <b>location</b>
        </field>
        <field>
            <a>photoURL</a>
            <b>photoURL</b>
        </field>
        <field>
            <a>introduction</a>
            <b>introduction</b>
        </field>
        <field>
            <a>summary</a>
            <b>summary</b>
        </field>
         <field>
            <a>groups</a>
            <b>groups</b>
        </field>
    </mapping>
</mappings>
