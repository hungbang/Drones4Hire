@import "./../../styles/settings/mixin.styl";

.work-client
  &__container
    max-width 100rem
    padding-top: 15rem
    padding-bottom: 5rem
  &__title,
  &__subtitle,
  &__text,
  &__list-item
    font-family: inherit;
  &__title,
  &__subtitle
    font-size: 3.6rem;
    font-weight: 400;
    text-transform: uppercase
    margin-bottom: 3rem
  &__text
    line-height: 4rem
    font-size: 2rem
    margin-bottom: 3rem
  &__subtitle
    font-size: 2.6rem;
    margin-bottom: 1em
  &__link
    cursor: pointer
    color: #337ab7;
    text-decoration: underline
  &__figure
    position: relative
    margin-top: 20px
    margin-bottom: 40px
    max-width 100%;
    width: 100%
    height: 490px
    text-align: center
    &._small
      height 300px
  &__img
    position: absolute
    width: 100%
    height: 100%
    top: 0
    bottom: 0
    right: 0
    left: 0
    object-fit cover
    border-radius: 3px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2);
  &__list
    padding-left: 20px
    list-style: disc
    margin-bottom 3rem
    &._digits
      padding 0
      list-style none
      counter-reset li
    &._digits &
      &-item
        &::before
          content counter(li)"."
          counter-increment li
          font-weight 700
          display inline-block
          margin-right .5em
    &-item
      font-size: 1.8rem
      line-height: 3.4rem
