@import '../../styles/settings/variables.styl'

.search

  &__map
    height 46rem
    &-wrapper
      padding-top 9rem
      margin-bottom 3rem

.gm-style
  .gm-style-iw
    width 100% !important
    height 100% !important
    background-color $gray1f
    top 0 !important
    left 0 !important
    color #fff
    overflow: visible !important;
    + div
      display none
    > div:first-child
      display block !important
      overflow: visible !important;
      position relative
      text-align: center
      z-index 1
    &::before
      content: '';
      width: calc(100% + 10px);
      height: calc(100% + 15px);
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, calc(-50% + 5px))
      background: $gray1f
      border-radius 3px
      box-shadow 0 0 3px 1px rgba(200,200,200,0.2), inset 0 0 6px 1px rgba(0,0,0,0.3)
      border 1px solid #000
    &::after
      bottom -32px
      content ''
      width 0
      height 0
      left 50%
      margin-left -13px
      position absolute
      border 10px solid transparent
      border-left-width 13px
      border-right-width 13px
      border-top-color $gray1f
