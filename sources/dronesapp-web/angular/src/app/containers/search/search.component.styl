@import '../../styles/settings/variables.styl'

.search

  &__map
    height 46rem
    &-wrapper
      padding-top 9rem
      margin-bottom 3rem
      .si
        &-content-wrapper
          padding 3px 10px
          min-width: 140px
          background-color $gray1f
          color #fff
          text-align center
        &-wrapper-top
          &:hover
            z-index 1
            .search__iw-title
              display block
        &-close-button
          font-size 2rem
          line-height 1em
          height 1em
        &-pointer-bg-top
          border-top-color $gray1f
  &__iw-link
    color #fff
  &__iw-title
    display none
