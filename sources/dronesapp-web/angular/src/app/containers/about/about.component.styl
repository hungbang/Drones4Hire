@import "./../../styles/settings/mixin.styl";

.about
  padding-top: 150px
  osans();
  &__container
    max-width 940px
  &__title,
  &__subtitle,
  &__text
    font-family: inherit;
  &__title,
  &__subtitle
    font-size: 3.6rem;
    font-weight: 400;
    text-transform: uppercase
    margin-bottom: 3rem
  &__text
    line-height: 4rem
    font-size: 2rem
    margin-bottom: 3rem
  &__subtitle
    font-size: 2.6rem;
    margin-bottom: 1.5rem
  &__link
    cursor: pointer
    color: #337ab7;
    text-decoration: underline
  &__figure
    position: relative
    margin-top: 20px
    margin-bottom: 40px
    max-width 100%;
    width: 100%
    height: 490px
    text-align: center
  &__img
    position: absolute
    width: 100%
    height: 100%
    top: 0
    bottom: 0
    right: 0
    left: 0
    object-fit cover
