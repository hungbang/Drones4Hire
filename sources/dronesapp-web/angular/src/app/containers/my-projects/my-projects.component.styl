@import '../../styles/settings/mixin.styl'

.my-projects
  padding-top 200px
  background-color rgba(138, 138, 138, .1)
  &__wrapper
    display: flex
    margin-bottom 45px
  &__title
    font-weight 600
    line-height 40px
    font-size 5rem
    color: black
    display inline-block
    osans(400)
  &__btn
    color #ffffff
    font-size 2.4rem
    background-color: #00bcd4
    padding 6px 30px 8px
    border-radius 2px
    box-shadow: 0 3px 7px rgba(#000, 0.35)
    osans(400)
    margin-left: 30px
  &__tabs
    position: relative
  &__update
    height: 39px
    top: 0
    bottom: 0
    margin: auto 0
    width: 50px
    background: #00bcd4
    position: absolute
    border-radius: 2px
    cursor: pointer
    right: 0
    svg-use
      width: 27px
      height: 25px
    .svg-update
      width: 100%
      height: 100%
      fill: #fff

  svg-use
    display: inline-block
    width: 27px
    height: 29px
    vertical-align: middle
  .svg-box-search
  .svg-box-download
  .svg-box-settings
    width 27px
    height 29px
    display inline-block
    vertical-align: top
    margin-right 10px
    fill: #1f2532
