@import "./../../styles/settings/mixin.styl";

.policy
  &__container
    max-width 100rem
    padding-top: 15rem
    padding-bottom: 5rem
  &__title,
  &__text
    font-family: inherit;
  &__title
    font-size: 3.6rem;
    font-weight: 400;
    text-transform: uppercase
    margin-bottom: 3rem
  &__important,
  &__text
    line-height: 4rem
    font-size: 2rem
    margin-bottom: 3rem
  &__important
    text-transform: uppercase
  &__link
    cursor: pointer
    color: #337ab7;
    text-decoration: underline

  &__subtitle
    margin-bottom 1em
    &._h3
      font-size 2rem

  &__list
    padding-left: 20px
    list-style: disc
    margin-bottom 3rem
    &._digits
      padding 0
      list-style none
      counter-reset li
    &._digits &
      &-item
        &::before
          content counter(li)"."
          counter-increment li
          font-weight 700
          display inline-block
          margin-right .5em
    &-item
      font-size: 1.8rem
      line-height: 3.4rem
