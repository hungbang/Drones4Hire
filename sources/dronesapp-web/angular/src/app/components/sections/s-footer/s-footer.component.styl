@import '../../../styles/settings/mixin.styl'

.s-footer
  padding 95px 0 95px
  background #1f2532
  &__top
    width: 100%
    display: flex
    justify-content: space-between
    margin-bottom: 100px
  &__public
    text-align: center
    margin-right: 50px
  &__logo
    display: inline-block
    margin-bottom: 30px
  &__navs
    display: flex
  &__item
    padding: 0 10px
  &__bottom
    font-size: 1.2rem
    text-align: center
  &__copy
    font-size 1.2rem
    font-weight: 400
    color #8f8f8f
    text-transform: uppercase
    osans(400)
    letter-spacing: 1px
@media screen and (max-width: 1024px)
  .s-footer
    padding: 70px 0 25px
    &__top
      margin-bottom: 60px
    &__public
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
    &__navs
      flex-wrap: wrap
    &__item
      flex-basis: 50%
      order: 3
      &._clients
        order: 1
        margin-bottom: 50px
      &._pilots
        order: 2
        margin-bottom: 50px
