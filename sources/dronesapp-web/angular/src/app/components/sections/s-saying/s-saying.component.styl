@import '../../../styles/settings/variables.styl'

.s-saying
  padding 100px 0
  background-size cover
  background-position center
  position: relative
  min-height 585px
  color #414141
  &:before
    position: absolute
    content ''
    left: 0
    top: 0
    width: 100%
    height: 100%
    background rgba(#fff, 0.8)
  .container
    max-width 1045px
    padding: 0 65px
  &__title
    color $gray1f
    font-size 3.6rem
    font-weight: 600
    letter-spacing .35em
    text-align: center
    margin-bottom: 85px
    position: relative
    text-transform: uppercase
    z-index: 1
    &::before
    &::after
      content: "";
      position: absolute;
      left: 50%;
      bottom: -25px;
      height: 3px;
      width: 20px;
      background-color: $gray8A
    &::before
      transform: translateX( -50% ) rotate(45deg);
    &::after
      transform: translateX( -50% ) rotate(-45deg);
