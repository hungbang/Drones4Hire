.s-preview
//background url('../../.././assets/img/bg-profile.jpg') no-repeat
//  height 100%
  padding-top 60%
  //width 100%
  //max-width 100%
  position relative
  &__content
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    display flex
    justify-content center
    align-items center
  &__bg
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    img
      width 100%
      max-width 100%
      height 100%
      max-height 100%
      object-fit cover
      object-position bottom
  &__info
    display flex
    padding 90px 0
  &__left
  &__right
    position relative
    flex-basis 35%
    max-width 35%
    background rgba(#fff, .95)
    padding 65px 20px 20px
  &__left
    &._no-description
      flex-basis 100%
      min-width 500px
      max-width 100%
  &__right
    flex-basis 65%
    max-width 65%
    margin-left 45px
  &__link
    font-size 1.8rem
    color #fff
    line-height 46px
    width 200px
    display block
    position absolute
    bottom -70px
    left 0
    right 0
    margin 0 auto
    background #3ebcc7
    text-transform uppercase
    text-align center
