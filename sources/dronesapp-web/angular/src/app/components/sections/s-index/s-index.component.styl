.s-index
  min-height 765px
  padding-top 185px
  display: flex
  align-items: center
  justify-content: center
  background-size cover
  background-position center
  text-align: center
  .container
    max-width 660px
  &__title
    font-size 4rem
    font-weight: 400
    text-transform: uppercase
    margin-bottom: 50px
  &__item
    padding: 0 20px
    width: 100%
    max-width 255px
    &-outer
      width: 100%
      display: flex
      justify-content: center
      align-items: center
      margin: 0 -20px
  &__link
    display: block
    width: 100%
    font-size 1.6rem
    line-height: 4.5rem
    text-transform: uppercase
    color #000
    border 1px solid #000
    transition border-color 0.25s, background 0.25s
    &:hover
      color: white;
      border-color: #3ebcc7;
      background-color: #3ebcc7;

