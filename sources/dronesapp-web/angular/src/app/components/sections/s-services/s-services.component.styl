@import '../../../styles/settings/variables.styl'

.s-services
  padding 110px 0 120px
  text-align: center
  &__title
    font-size 3.6rem
    font-weight 400
    letter-spacing .35em
    margin-bottom: 70px
    color $gray1f
    text-transform: uppercase
    position: relative
    &::before
    &::after
      content: "";
      position: absolute;
      left: 50%;
      bottom: -25px;
      height: 3px;
      width: 20px;
      background-color: #8a8a8a;
    &::before
      transform: translateX( -50% ) rotate(45deg);
    &::after
      transform: translateX( -50% ) rotate(-45deg);
  &__text
    max-width 910px
    margin: 0 auto
    margin-bottom: 45px
    font-size 1.8rem
    letter-spacing .05em
    line-height 2.8rem
    color $gray1f
  &__bottom
    margin-bottom: 30px
