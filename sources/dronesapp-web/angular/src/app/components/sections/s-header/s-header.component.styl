@import '../../../styles/settings/mixin.styl'

.s-header
  background #1f2532
  position: fixed
  width: 100%
  top: 0
  left: 0
  z-index: 3
  &__container
    height 90px
    display: flex
    align-items: center
  &__menu
    justify-content: flex-end
    display: flex
    flex-grow: 1
    align-self: stretch
  &__logo
    &-img
      object-fit cover
      display: block
      margin: 0 auto
  &__hamburger
    display: none
    position: absolute
    top: 0
    bottom: 0
    right: 10px
    margin: auto 0
    height: 35px
    cursor: pointer
    .svg-hamburger
      fill: #fff
      width: 55px
      height: 35px
@media screen and (max-width: 1024px)
  .s-header
    .container
      padding: 0
    &__container
      flex-direction: column
      align-items: stretch
      width: 100%
    &__logo
      align-self: flex-start
      flex-grow: 1
      &-img
        position: relative
        z-index: 1
        margin: 35px 0 0 25px
    &__menu
      z-index: -1
      display: block
      &:before
        ps()
        top: 0
        left: 0
        background: #1f2532
        width: 100%
        height: 90px
        z-index: 2
    &__hamburger
      display: block
