.s-account
  padding: 170px 0 100px

  &__wrapper
    display: flex
    margin-bottom 45px

  &__title
    font-size 5rem
    font-weight 400
    line-height 1em

  &__btn
    color #fff
    font-size 1.6rem
    line-height 2rem
    background-color: #00bcd4
    padding 15px 30px
    border-radius 2px
    box-shadow: 0 3px 7px rgba(#000, 0.35)
    margin-left: 30px

  &__subtitle
    font-size 2.4rem
    padding: 0 30px
    line-height: 5rem
    background #4d4d4f
    color #fff
    border-radius 3px
    margin-bottom: 30px
    opacity 1

  &__text
    font-size 1.8rem
    font-weight: 400
    max-width 1000px
    column-count 2
    column-gap 100px
    margin: 0 auto
