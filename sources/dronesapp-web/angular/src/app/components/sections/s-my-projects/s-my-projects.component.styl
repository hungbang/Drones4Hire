.s-my-projects
  position: relative
  &__pagination
    display: flex
    justify-content: center
    padding-bottom: 5rem
    margin-top 5rem
  &__update
    height: 39px
    top: -80px
    width: 50px
    background: #00bcd4
    position: absolute
    border-radius: 2px
    cursor: pointer
    right: 0
    padding-top: 1px
    svg-use
      display: inline-block
      margin: 0 auto
      width: 25px
      height: 25px
    .svg-update
      width: 100%
      height: 100%
      fill: #fff
