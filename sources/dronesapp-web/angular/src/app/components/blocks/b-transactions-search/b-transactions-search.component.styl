.b-transactions-search
  &__title
    font-size: 3.5rem;
    color: #000;
    margin 15px 0
  &__top
    display flex
    > :first-child
      flex-basis 30%
  &__head
    display flex
    color: #ffffff
    font-size 1.4rem
    text-transform uppercase
    background-color #666666
    border-radius 5px 5px 0 0
  &__item
    min-height 60px
    width 20%
    display flex
    align-items center
    padding-left 20px
    cursor pointer
    &._down,
    &._up
      &:after
        content: '\25B4';
        font-size: 1.6rem;
        display: inline-block;
        pointer-events: none;
    &._down
      &:after
        content '\25BE'
