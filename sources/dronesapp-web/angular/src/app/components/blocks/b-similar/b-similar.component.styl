@import './../../../styles/settings/mixin.styl'

.b-similar
  position: relative
  padding-top: 100%;
  &._active
    .b-similar__img-wrapper
      opacity: 0
  &__wrapper
    border 1px solid #cdcdcd
    position: absolute
    top 0
    left: 0
    right: 0
    bottom: 0
    margin: auto;
    display: flex
    flex-direction: column
    justify-content: space-between
  &__title
    text-transform: uppercase
    color #464646
    font-size: 2.4rem
    letter-spacing: 5px
    osans(600)
    margin-bottom: 15px
  &__description
    margin-bottom: 15px
    letter-spacing: 3px
  &__subtitle
    letter-spacing: 5px
    margin-bottom: 10px
    color #acacac
  &__text
    color #2f2f2f
  &__img
    width: 100%
    max-width: 100%
    max-height 100%
    height: 100%
    &-wrapper
      transition opacity .2s
      height: 100%
      width: 100%
      position: absolute
      top 0
      left: 0
      right: 0
      bottom: 0
      margin: auto;

@media only screen and (min-width: 1025px)
  .b-similar
    &:hover
      .b-similar__img-wrapper
        opacity: 0

