@import './../../../styles/settings/variables.styl'
@import './../../../styles/settings/mixin.styl'

.b-similar
  &__wrapper
    display: flex
    flex-direction: column
    justify-content: space-between
    font-size 1.8rem
    letter-spacing: 0.02em

  &__title
    text-transform: uppercase
    color #464646
    font-size: 2.4rem
    letter-spacing: 0.02em
    font-weight 600
    margin-bottom: 1.5rem
    &-link
      color $gray1f

  &__description
    margin-bottom: 1.5rem

  &__subtitle
    margin-bottom: 1rem
    color #acacac

  &__text
    color #2f2f2f

  @media screen and (max-width: 1024px)
    &__wrapper
      flex-direction row
      margin 0 -2rem
      flex-wrap wrap

    &__description
      flex initial
      width 50%
