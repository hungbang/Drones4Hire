@import '../../../styles/settings/mixin.styl'

.b-bid-info
  margin-bottom: 70px
  &__title
    osans(600)
    text-transform: uppercase
    font-size 3rem
    color #414141
    margin-bottom: 42px;
    letter-spacing: 7px
  &__wrapper
    display: flex
    flex-direction column
    max-width: 235px
    border 1px solid #414141
  &__item
    text-align: center
    padding: 23px 10px;
    &:not(:last-child)
      border-bottom 1px solid #414141
    &-title
      font-size 1.8rem
      margin-bottom: 5px
      letter-spacing: 4px
      color #acacac
    &-text
      font-size 1.8rem
      letter-spacing: 4px
      color #2f2f2f

  @media screen and (max-width: 1024px)
    &__wrapper
      flex-direction row
      max-width none

    &__item
      flex none
      width calc(100% / 3)
      &:not(:last-child)
        border-bottom 0
        border-right 1px solid #414141
