.b-bid-info
  margin-bottom: 70px
  &__title
    text-transform: uppercase
    font-size 3.6rem
    color #414141
    margin-bottom: 30px;
  &__wrapper
    display: flex
    max-width: 695px
    border 1px solid #414141
  &__item
    flex-basis: 33.333%
    max-width: 33.333%
    text-align: center
    padding: 12px 10px;
    &:not(:first-child)
      border-left 1px solid #414141
    &-title
      font-size 1.8rem
      color #acacac
      margin-bottom: 5px
    &-text
      font-size 1.8rem
      color #2f2f2f
