@import "../../../styles/settings/variables.styl"

.b-portfolio
  position: relative
  padding-top: 100%;

  &__img
    max-width: 100%
    max-height 100%
    &-wrapper
      transition opacity .2s
      height: 100%
      width: 100%
      position: absolute
      top 0
      left: 0
      right: 0
      bottom: 0
      margin: auto
      display flex
      align-items center
      justify-content center
      background-color $gray1f
      cursor pointer

  &._active &
    &__img
      max-width: 90%
      max-height 90%
      &-wrapper
        position fixed
        z-index: 3
        background-color rgba(50,50,50,0.9)
