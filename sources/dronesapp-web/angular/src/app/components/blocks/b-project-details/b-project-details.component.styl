@import "../../../styles/settings/mixin.styl"

.b-project-details
  margin-bottom: 60px

  &__title
    font-size 3rem
    font-weight 600
    color #414141
    text-transform: uppercase
    margin-bottom: 32px;
    letter-spacing: .35em

  &__button
    max-width: 225px
    width: 100%
    height: 4.6rem
    border-radius: 0
    text-transform: uppercase
    letter-spacing: 3.5px;
    margin-bottom: 20px
    osans()

  &__subtitle
    font-size 1.8rem
    color #acacac
    margin-bottom: 5px
    letter-spacing: .2em

  &__text
    font-size 1.8rem
    color #2f2f2f
    margin-bottom: 10px
    letter-spacing: .2em
    line-height: 3rem

  @media screen and (max-width: 1024px)
    &__wrapper
      display flex
      margin 0 -10px
      flex-wrap wrap

    &__item
      flex auto
      width calc(50% - 20px)
      margin 0 10px 10px
