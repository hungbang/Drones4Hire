@import "../../../styles/settings/mixin.styl"

.b-project-details
  margin-bottom: 60px
  &__title
    font-size 3.6rem
    color #414141
    text-transform: uppercase
    margin-bottom: 32px;
    letter-spacing: 13px;
    osans()
  &__button
    max-width: 225px
    width: 100%
    height: 4.6rem
    border-radius: 0
    text-transform: uppercase
    letter-spacing: 3.5px;
    margin-bottom: 20px
    osans()
  &__subtitle
    font-size 1.8rem
    color #acacac
    margin-bottom: 5px
    letter-spacing: 3.5px;
    osans()
  &__text
    osans()
    font-size 1.8rem
    color #2f2f2f
    margin-bottom: 10px
    letter-spacing: 3.5px;
    line-height: 3rem
