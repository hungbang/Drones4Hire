@import "../../../styles/settings/variables.styl"

.b-profile
  text-align center
  position relative
  &__img
    width 100%
    height 100%
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    object-fit cover
    &-wrapper
      width 113px // from mockup
      height 113px // from mockup
      margin 0 auto 20px
      &._image
        border-radius 50%
        overflow hidden
        position relative
  &__title
    font-size 2.4rem
    letter-spacing .2em
    color #2f2f2f
    margin-bottom 20px
    &._top
      color #504f4f
      font-size 1.6rem
      text-transform uppercase
      letter-spacing 0.5em
  &__subtitle
    font-size 1.8rem
    letter-spacing .2em
    text-transform uppercase
    color #acacac
    margin-bottom 25px
  &__dron
    &-img
      width 100%
      max-width 100%
      max-height 100%
    &-wrapper
      width 38px
      margin 0 auto 50px
  &__wrapper
    font-size 0
    margin 0 auto
    max-width 80%
  &__col
    display inline-block
    vertical-align middle
    width 50%
    padding 0 10px
    letter-spacing .2em
    &-title
      font-size 1.8rem
      color $gray8F
      &._blue
        color #159AA5
    &-text
      font-size 1.8rem
      color $gray1f

.svg-usericon
  width 100px
  height 100px
  margin auto



