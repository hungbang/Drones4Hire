.b-profile
  text-align center
  position relative
  &__img
    min-width 100%
    min-height 100%
    max-width 150%
    max-height 150%
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    &-wrapper
      width 113px // from mockup
      height 113px // from mockup
      margin 0 auto 20px
      &._image
        border-radius 50%
        overflow hidden
        position relative
  &__title
    font-size 2.4rem
    color #2f2f2f
    margin-bottom 20px
  &__subtitle
    font-size 1.8rem
    text-transform uppercase
    color #acacac
    margin-bottom 25px
  &__dron
    &-img
      width 100%
      max-width 100%
      max-height 100%
    &-wrapper
      width 38px
      margin 0 auto 50px
  &__wrapper
    font-size 0
    margin 0 auto
    max-width 80%
  &__col
    display inline-block
    vertical-align middle
    width 50%
    padding 0 10px
    &-title
      font-size 1.8rem
      color #acacac
    &-text
      font-size 1.8rem
      color #2f2f2f

.svg-usericon
  width 100px
  height 100px
  margin auto



