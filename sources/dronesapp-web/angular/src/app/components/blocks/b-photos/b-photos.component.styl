.b-photos
  &__title
    font-size 3.6rem
    text-transform: uppercase
    color #464646
    margin-bottom: 40px;
  &__row
    display: flex
    margin: 0 -11px 20px
  &__col
    flex-basis: 66.666%
    max-width: 66.666%
    position: relative
    padding: 0 11px;
    &._short
      flex-basis: 33.333%
      max-width: 33.333%
      .b-photos__img-wrapper
        padding-top: 100%
    &._long
      .b-photos__img-wrapper
        padding-top: 43%
    &._tall
      .b-photos__img-wrapper
        padding-top: 228%
  &__img
    position: absolute
    top 0
    left: 0
    width: 100%;
    max-width: 100%;
    height: 100%;
    object-fit: cover;
    &-wrapper
      position: relative
      padding-top: 100%
      &+&
        margin-top: 20px
