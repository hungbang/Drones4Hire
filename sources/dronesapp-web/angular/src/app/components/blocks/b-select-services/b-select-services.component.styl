@media (max-width: 740px)
  .b-select-services
    //&__content
    //  padding-top: 5px
    //  max-height: 205px
    //  overflow-y: auto
    //  customScroll()
    &__list
      padding-bottom: 20px
    &__item
      &._show
        .b-select-sectors
          &__panel
            padding: 15px 0 15px 41px
            border-top: none
    &__panel
      border-top: none
      &-item
        padding: 0
        width: 100%
    &__checkbox
      width: 100%
      &-text
        font-size: 1.2rem
        line-height: 2rem
        margin: 0
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        transition: color .2s ease-out
        &:hover
          color: $gray1f
      &-btn
        display: none
      &-input:checked + span + span
        color: $gray1f

    &__text
      font-size: 1.2rem
      line-height: 2rem
      padding-left: 34px
      transition: color .2s ease-out
      &._active
        color: $gray1f
      &:hover
        color: $gray1f
      &:before
        ps()
        left: 24px
        bottom: 7px
        border-left: 6px solid $gray1f
        border-top: 3px solid transparent
        border-bottom: 3px solid transparent

