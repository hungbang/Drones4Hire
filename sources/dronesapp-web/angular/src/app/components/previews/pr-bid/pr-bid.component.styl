@import "./../../../styles/settings/mixin.styl";

.pr-bid
  font-size 1.6rem
  line-height 14px
  letter-spacing .5px
  color rgb(51,51,51)
  &__wrapper
    display flex
    justify-content space-between
  &__right
    text-align left
    width: 260px
    flex: none
    osans()
    font-size: 1.8rem
    text-transform: uppercase
    color: #464646
  &__left
    display flex
  &__top
    display: flex
    padding-top: 7px
    margin-bottom: 13px
  &__name
    font-size: 2.4rem
    color: #464646
    osans()
    font-weight bold
    text-transform: uppercase
    margin-right: 15px
  &__date
    color: #8a8a8a
    font-size: 2rem
  &__user
    text-align center
    cursor pointer
  &__propolsal
    margin-left 40px
    > p
      osans()
      font-size: 1.8rem
      text-transform: uppercase
      letter-spacing: 2px
      max-width 400px
      line-height: 30px
      &:first-of-type
        margin-bottom 0px
        max-width none
  &__age
    margin-bottom 15px
  &__amount
    margin-bottom 15px
  &__line
    height 1px
    width 100%
    background-color #8a8a8a
    margin 25px 0

.svg-usericon
  width 113px
  height 113px


