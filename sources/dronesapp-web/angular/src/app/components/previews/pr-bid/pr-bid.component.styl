@import "./../../../styles/settings/variables.styl";

.pr-bid
  font-size 1.6rem
  line-height 14px
  letter-spacing .2em
  color rgb(51,51,51)
  &__wrapper
    display flex
    justify-content space-between
  &__right
    text-align left
    width: 230px
    flex: none
    font-size: 1.8rem
    text-transform: uppercase
    color: $gray46
  &__left
    display flex
  &__top
    display: flex
    padding-top: 7px
    margin-bottom: 13px
  &__name
    font-size: 2.4rem
    color: $gray46
    font-weight 600
    text-transform: uppercase
    margin-right: 15px
    letter-spacing .2em
    line-height: 2.6rem
  &__date
    color: $gray8A
    font-size: 2rem
  &__user
    text-align center
    cursor pointer
  &__propolsal
    margin-left 40px
    > p
      font-size: 1.8rem
      text-transform: uppercase
      letter-spacing: .2em
      max-width 400px
      line-height: 30px
      &:first-of-type
        margin-bottom 0
        max-width none
  &__age
  &__amount
    font-size 1.8rem
    line-height: 2rem
    margin-bottom 5px
    letter-spacing: .15em
    color $gray46
  &__line
    height 1px
    width 100%
    background-color $gray8A
    margin 25px 0
    &._small
      margin 0
      color #000

  bid-head
    display: block
    padding-top: 1px
  bid-buttons
    margin-top 1.5rem
    display: block

  &__photo
    width: 113px
    height: 113px
    &-img
      border-radius: 50%
      width: 100%
      height: 100%
      background-size: cover

  .svg-usericon
    width 113px
    height 113px

  &__fee
    margin-top 0.5rem
    text-transform uppercase
    letter-spacing 0.05em
    color $gray46
    font-size 1.4rem
    margin-bottom 1rem


