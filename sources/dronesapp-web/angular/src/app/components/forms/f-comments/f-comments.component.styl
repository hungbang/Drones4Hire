@import "./../../../styles/settings/variables.styl";

.f-comments
  margin-bottom: 50px;
  &__title
    font-size 1.8rem
    text-transform: uppercase
    color $gray46
    margin-bottom: 10px
    letter-spacing: 0.2em
  &__wrapper
    margin-bottom: 20px;
  &__textarea
    border 1px solid $gray46
    width: 100%
    height: 150px
    padding: 10px;
    font-size: 1.8rem
  &__button
    background $blueC7
    width: 225px
    height: 46px
    color #fff
    text-transform: uppercase
    font-size 1.8rem
    letter-spacing: .2em

