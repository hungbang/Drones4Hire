@import "./../../../styles/settings/variables.styl";

.f-comments
  margin-bottom: 5rem;
  &__title
    font-size 1.8rem
    text-transform: uppercase
    color $gray46
    margin-bottom: 1rem
    letter-spacing: 0.2em
  &__wrapper
    margin-bottom: 2rem;
  &__textarea
    border 1px solid $gray46
    width: 100%
    height: 15rem
    padding: 1rem;
    font-size: 1.8rem
    &._error
      border-color red
      background-color rgba(255,0,0,0.15)
  &__button
    background $blueC7
    width: 22.5rem
    height: 4.6rem
    color #fff
    text-transform: uppercase
    font-size 1.8rem
    letter-spacing: .2em

  .f-default
    &__text
      &._light
        display block
        text-align right
        margin-right 0
      &._info
        font-size: 1.5rem
        text-align: justify
        display: block
        margin-right 0

