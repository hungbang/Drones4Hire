@import '../../../styles/settings/variables.styl'

.f-forgot-password
  display: block
  border-radius: 3px
  max-width: 57.5rem
  margin: 0 auto
  -webkit-box-shadow: 0 3px 7px 0 rgba(0,0,0,0.35)
  box-shadow: 0 3px 7px 0 rgba(0,0,0,0.35)

  &__header
    font-size 5rem
    background-color $gray1f
    border-radius 3px 3px 0 0
    font-weight 400
    line-height 5rem
    padding 2.5rem 4rem
    color #fff

  &__content
    padding 3.5rem 10rem 2.5rem
    border-radius 0 0 3px 3px
    background-color #fff

  .f-default
    &__row
      &._controls
        text-align: center
    &__text
      color $gray1f
