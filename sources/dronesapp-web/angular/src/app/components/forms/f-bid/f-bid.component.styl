@import "../../../styles/settings/variables.styl"
@import "../../../styles/settings/mixin.styl"

.f-bid
  margin-bottom: 63px
  &__title
    text-transform: uppercase
    font-size 3.6rem
    color #414141
    margin-bottom: 19px
    letter-spacing: 13px
  &__text
    text-transform: uppercase
    color #464646
    margin-bottom: 10px;
    font-size 1.8rem
    letter-spacing: 5px
  &__textarea
    width: 100%
    height: 150px
    padding: 10px;
    font-size: 1.8rem
  &__row
    &+&
      margin-top: 35px
      margin-bottom: 30px
  &__wrapper
    display: flex
  &__col
    &._amount
      width: 100%
      max-width: 225px
      position: relative
      margin-right: 22px;
  &__field
    width: 100%
    height: 4.2rem;
    padding: 0 1rem 0 2.5rem;
    font-size: 1.8rem
    &:not(textarea)
      height 4.2rem
    &-span
      font-size 1.8rem
      color #464646
      position: absolute
      top 50%
      left: 1rem
      transform: translateY(-50%)
    &._error
      border-color red
  &__fee
    margin-top 0.5rem
    text-transform uppercase
    letter-spacing 0.05em
    color $gray1f
    font-size 1.4rem
  &__label
    display: flex
    align-items flex-end
    height: 100%
  &__chk
    &-input
      display: none
      &:checked+
        .f-bid__chk-span
          &:after
            display: block
    &-span
      vab()
      position: absolute
      &:before
        ps()
        top -40px
        left: 0
        width: 40px
        height: 40px
        border 1px solid #464646
      &:after
        ps()
        display: none
        top -34px
        left: 5px;
        width: 30px
        height: 14px
        border-left: 2px solid #464646;
        border-bottom: 2px solid #464646;
        transform rotate(-45deg)
  &__span
    vab()
    padding-left: 55px
    font-size 1.8rem
    color #464646
    text-transform: uppercase
  &__button
    background $blueC7
    width: 22.5rem
    height: 4.2rem
    color #fff
    text-transform: uppercase
    font-size 1.8rem
    letter-spacing: 0.2em

  .f-default
    &__text
      &._light
        display block
        margin-right 0
        text-align right
      &._info
        font-size: 1.5rem
        text-align: justify
        display: block
        margin-right 0
