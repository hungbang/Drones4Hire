@import './../../../styles/settings/mixin.styl';

.f-card
  osans(400)
  &__title
    font-size: 2.8rem
    margin: 0 4px
    margin-bottom: 10px
    font-family: inherit;
    color: #1f2532
  &__row
    width: 100%
    display: flex
    margin-bottom: 7px
    &:nth-of-type(3)
      margin-bottom: 15px
  &__col
    flex-basis: 40%
    flex-grow: 1
    margin: 0 4px
    &._cvv
      flex-basis 25%
  &__bottom
    margin: 0 4px
