.f-search
  display block
  max-width 1120px
  margin: 0 auto
  &__row
    display: flex
    align-items: flex-end
    justify-content: space-between
    margin-bottom: 40px
  &__col
    max-width 252px
    flex-basis: 252px
    padding: 0 10px
  &__field
    display: block
    padding: 0 16px
    width: 100%
    height 42px
    background #555
    color #fff
    font-size 1.6rem
    font-weight: 400
    &._select
      text-transform: uppercase
  &__button
    display: block
    margin: 0 auto 70px
    height 42px
    max-width 232px
    width: 100%
    background #3ebcc7
    font-size 1.6rem
    font-weight: 400
    color #fff
    text-transform: uppercase
  &__text
    display: block
    margin-bottom: 10px
    font-size 1.6rem
    font-weight: 400
    color #777
    text-transform: uppercase
