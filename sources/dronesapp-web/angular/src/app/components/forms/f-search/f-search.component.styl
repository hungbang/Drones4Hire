@import '../../../styles/settings/mixin.styl'

.f-search
  display block
  max-width 1120px
  margin: 0 auto
  &__row
    display: flex
    align-items: flex-end
    justify-content: center
    margin-bottom: 40px
  &__col
    max-width 292px
    flex-basis: 292px
    padding: 0 30px
  &__label
    display: block
    width: 100%
    position: relative
    &._select
      &:after
        v()
        top: -6px
        right: 15px
        width: 12px
        height: 12px
        border-bottom: 1px solid #fff
        border-left: 1px solid #fff
        transform: rotate(-45deg)

  &__field
    display: block
    padding: 0 35px 0 16px
    width: 100%
    height 42px
    background #1f2532
    color #fff
    font-size 1.6rem
    font-weight: 400
    &._select
      text-transform: uppercase
  &__button
    display: block
    margin: 0 auto 35px
    height 42px
    max-width 232px
    width: 100%
    background #3ebcc7
    font-size 1.6rem
    font-weight: 400
    color #fff
    text-transform: uppercase
  &__text
    display: block
    margin-bottom: 10px
    font-size 1.6rem
    font-weight: 400
    color #1f2532;
    text-transform: uppercase
