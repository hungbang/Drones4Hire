@import '../../../styles/settings/mixin.styl'

.f-search
  display block
  max-width 112rem
  margin: 0 auto
  &__row
    display: flex
    align-items: flex-end
    justify-content: center
    margin-bottom: 4rem
  &__col
    max-width 29.2rem
    flex-basis: 29.2rem
    padding: 0 3rem
  &__label
    display: block
    width: 100%
    position: relative
    &._select
      &:after
        v()
        top: -6px
        right: 15px
        width: 12px
        height: 12px
        border-bottom: 1px solid #fff
        border-left: 1px solid #fff
        transform: rotate(-45deg)

  &__field
    display: block
    padding: 0 3.5rem 0 1.6rem
    width: 100%
    height 4.2rem
    background #1f2532
    color #fff
    font-size 1.6rem
    &._select
      text-transform: uppercase
  &__button
    display: block
    margin: 0 auto 3.5rem
    height 4.2rem
    max-width 23.2rem
    width: 100%
    background #3ebcc7
    font-size 1.6rem
    color #fff
    text-transform: uppercase
  &__text
    display: block
    margin-bottom: 1rem
    font-size 1.6rem
    color #777;
    text-transform: uppercase
