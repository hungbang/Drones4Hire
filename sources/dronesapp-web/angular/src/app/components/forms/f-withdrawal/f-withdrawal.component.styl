@import "../../../styles/settings/variables.styl"

.f-withdrawal
  max-width 630px
  margin 0 auto
  box-shadow: 0 3px 7px 0 rgba(0, 0, 0, 0.35);
  border-radius 3px

  &__header
    background-color $gray1f
    color #fff
    text-align center
    font-size 2rem
    line-height 2.4rem
    padding 28px 20px
    border-radius 3px 3px 0 0
    &-link
      color $blueD4

  &__content
    background-color #fff
    border-radius 0 0 3px 3px
    padding 45px 65px 55px

  .f-default
    &__field
      &._area
        height 230px
    &__button
      margin-top 20px
      width 100%
      max-width none
      &[disabled]
        background-color $gray8F
