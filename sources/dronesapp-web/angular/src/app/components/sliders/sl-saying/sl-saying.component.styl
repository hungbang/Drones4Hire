@import '../../../styles/settings/variables.styl'
@import '../../../styles/settings/mixin.styl'

.sl-saying
  color $gray46
  position: relative
  z-index: 1
  text-align: center
  margin-bottom 30px
  &__title
    font-size 2.4rem
    letter-spacing .2em
    text-transform: uppercase
    margin-bottom: 30px
  &__name
    display: block
    margin-bottom: 25px
    font-size 1.8rem
    letter-spacing .05em
  &__text
    font-size 1.8rem
    line-height: 1.5
    letter-spacing .05em
  .slick-arrow
    width: 50px
    height: 50px
    position: absolute
    font-size 0
    top: 50%
    &:before
      hv()
      width: 15px
      height: 15px
      border-bottom 4px solid $gray8A
      border-left 4px solid $gray8A
  .slick-prev
    left: -65px
    &:before
      transform rotate(45deg)
  .slick-next
    right: -65px
    &:before
      transform rotate(-135deg)
