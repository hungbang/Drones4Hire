.l-howit
  display: flex
  justify-content: space-between
  margin 0 -30px 30px
  &__item
    padding 0 30px
    max-width 33.333333%
    flex-basis 33.333333%
  &__img
    display: block
    position: absolute
    width: 100%
    height: 100%
    left: 0
    top: 0
    object-fit contain
    object-position center
    &-wrap
      position: relative
      width: 100%
      padding-top 85%
      margin: 0 auto
  &__info
    margin-top: 30px
    color #fff
    text-align: center
  &__title
    font-size 1.8rem
    font-weight: 700
    letter-spacing .15em
    margin-bottom: 20px
  &__text
    font-size 1.8rem
    line-height 3rem
    font-weight: 400
    letter-spacing .05em
