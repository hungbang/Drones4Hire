.l-going
  display: flex
  justify-content: space-between
  margin 0 -20px
  &__item
    padding 0 20px
    max-width 33.333333%
    flex-basis 33.333333%
    position: relative
    &:hover
      .l-going__info
        opacity 1
  &__img-wrap
    width: 100%
    padding-top 100%
    position: relative
  &__img
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    display: block
    object-fit cover
    object-position center
  &__info
    opacity 0
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0
    display: flex
    flex-direction column
    justify-content: center
    align-items: center
    padding 0 40px
    text-align: center
    background rgba(#fff, 0.8)
    transition opacity 0.25s ease-out
  &__title
  &__text
    font-size 1.8rem
    letter-spacing .05em
    line-height 3rem
    font-weight: 400
    color #464646
    & + &
      margin-top 20px
  &__title
    font-size 2.4rem
    font-weight 700
    letter-spacing 0.2em
    margin-bottom: 20px
