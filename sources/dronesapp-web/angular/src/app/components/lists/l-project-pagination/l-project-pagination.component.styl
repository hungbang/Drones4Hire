@import '../../../styles/settings/mixin.styl'

.l-project-pagination
  display: flex
  &__item
    border: 1px solid #ccc
    border-left-width: 0
    &:first-child
      border-left-width: 1px
  &__link
    display: block
    padding: 7px 15px
    color: #00bcd4
    font-size: 1.6rem
    transition: all .2s ease-in-out
    osans()
    &._active
    &:hover
      color: #fff
      background: #00bcd4

