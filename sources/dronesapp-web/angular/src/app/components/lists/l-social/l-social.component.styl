.l-social
  display: flex
  justify-content: center
  margin-bottom: 10px
  &__item
    padding: 0 7px
  &__link
    width: 38px
    height: 38px
    border-radius 50%
    background #fff
    display: flex
    align-items: center
    justify-content: center

    .svg-twitter
    .svg-instagram
    .svg-google
    .svg-linkedin
    .svg-facebook
      width: 18px
      height: 18px
      fill: #1f2532
