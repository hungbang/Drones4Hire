.l-comments
  &__item
    padding 28px 0
    border-bottom 1px solid #000
    display: flex
    justify-content flex-start
  &__left
    width: 110px
    flex: none
    display flex
    justify-content center
    padding-top: 6px;
  &__link-img
    width: 66px
    height: 66px
    position: relative
    cursor: pointer
  &__img
    position: absolute
    top: 50%
    left: 50%
    width: 100%
    height: 100%
    object-fit: cover
    transform translate(-50%, -50%)
  &__top
    display flex
    margin-bottom 5px
  &__name
  &__date
    font-size 1.8rem
    text-transform uppercase
    color #3d3d3d
    letter-spacing: 2.5px;
  &__date
    margin-left 25px
  .l-rating
    margin-left 55px
    margin-top -4px
  .svg-star
  .svg-halfstar
  .svg-emptystar
    width 22px
    height 21px
  &__bottom
    p
      color #8a8a8a
      font-size 1.8rem
      line-height 28px
      letter-spacing: 1.8px;
