@import '../../../styles/settings/variables.styl'

.l-services
  display: flex
  justify-content: center
  margin 0 -35px
  flex-wrap wrap

  &__item
    margin 0 35px 20px
    svg
      width 110px
      height 110px
      margin 0 auto

  &__info
    padding: 10px 20px
    border: 1px solid $gray1f
    margin-top: 15px
    font-size 1.4rem
    font-weight 700
    text-transform: uppercase
    white-space nowrap
