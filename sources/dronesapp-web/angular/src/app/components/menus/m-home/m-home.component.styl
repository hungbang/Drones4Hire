.m-home
  height: 100%
  display: flex
  justify-content: space-between
  align-items: center
  margin: 0 -15px
  &__item
    padding 0 15px
    &._margin
      margin-right auto
  &__link
    display: block
    font-size 1.4rem
    color #fff
    text-transform: uppercase
    transition color 0.25s
    white-space nowrap
    &:hover
      color: #3ebcc7;
    &._project
      display: inline-block
      padding: 10px;
      border-radius: 3px;
      background: #3ebcc7;
      color: white;
      text-decoration: none;
      font-size 1.4rem


