@import '../../../styles/settings/variables.styl'

.m-footer
  display: block
  &__title
    letter-spacing: .2em
    text-transform: uppercase
    font-size 1.8rem
    font-weight: 600
    color $blueC7
    margin-bottom: 10px
  &__list
    display: block
  &__item
    text-transform: uppercase
  &__link
    letter-spacing: .2em
    font-size 1.4rem
    color #fff
    padding: 3px 0
    display: block
    transition 0.25s
    &:hover
      color $blueD4

