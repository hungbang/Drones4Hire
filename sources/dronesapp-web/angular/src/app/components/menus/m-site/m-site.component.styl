.m-site
  height: 100%
  display: flex
  justify-content: flex-end
  align-items: stretch

  &__item
    display: flex
    align-items: center
    position: relative
    margin: 0 12px
    &:hover
      .m-site__sub
        opacity: 1
        pointer-events: all

  &__link
    padding 15px
  &__sub-link
  &__link
    display: block
    font-size 1.4rem
    line-height: 1.6rem
    letter-spacing 1px
    font-weight: 400
    color #fff
    text-transform: uppercase
    transition color 0.25s
    white-space nowrap
    &:hover
      color: #3ebcc7
    &._active
      display: inline-block
      padding: 10px 10px 8px
      border-radius: 3px
      background: #3ebcc7
      color: white
      text-decoration: none
      font-size 1.4rem

  &__sub
    position: absolute
    display: inline-block
    padding 8px 20px
    top: 100%
    background rgba(#353945, 0.9)
    opacity 0
    pointer-events none
    transition opacity 0.25s
    transform translateZ(0)
    &-link
      padding: 10px 0

