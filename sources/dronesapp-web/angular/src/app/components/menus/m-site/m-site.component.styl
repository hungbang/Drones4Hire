@import '../../../styles/settings/variables.styl'

m-site
  display: flex
  justify-content: flex-end
  align-items: stretch

.m-site
  display: flex
  justify-content: flex-end
  align-items: stretch

  &__item
    display: flex
    align-items: center
    position: relative
    margin: 0 12px
    &:hover
      .m-site__sub
        opacity: 1
        pointer-events: all

  &__link
    padding 15px

  &__sub-link
  &__link
    display: block
    font-size 1.6rem
    letter-spacing .2em
    color #fff
    text-transform: uppercase
    transition color 0.25s
    white-space nowrap
    &:hover
      color: $blueD4
    &._active
      display: inline-block
      vertical-align middle
      padding: 10px 10px 8px
      border-radius: 3px
      background: $blueD4
      color: #fff
      text-decoration: none
      box-shadow 0 3px 7px 0 rgba(0, 0, 0, .35)

  &__sub
    position: absolute
    display: inline-block
    padding 8px 20px
    top: 100%
    background rgba($gray1f, 0.9)
    opacity 0
    left: 0
    pointer-events none
    transition opacity 0.25s
    transform translateZ(0)
    &-link
      padding: 10px 0

@media screen and (max-width: 1100px)
  m-site
    width: 100%
    position: absolute
    pointer-events: none
    display: block
    max-height: calc(100vh - 60px) // 60px height of logo
    overflow-y: auto
    transform: translateY(-100%)
    transition: transform .3s ease-out, opacity .0001s linear .3s
    opacity: 0
    &._opened
      opacity: 1
      transition: transform .3s ease-out, opacity .0001s linear
      pointer-events: auto
      transform: translateY(0)
  .m-site
    background: $gray1f
    flex-direction: column
    width: 100%
    top: 0
    z-index: 1
    left: 0
    &__sub
      min-width: 250px
      opacity: 0
      padding: 0
      overflow: hidden
      max-height: 0
      border-top: 1px solid #fff
      border-bottom: 1px solid #fff
      pointer-events: none
      position: relative
      transition: max-height .5s ease-out, opacity .2s ease-in-out
      margin-bottom: 0
    &__item
      display: flex
      flex-direction: column
      justify-content: center
      &._active
        margin-top: 7px
      &:first-child
        padding-top: 50px
      &:last-child
        padding-bottom: 70px
    &__item:hover &__sub
      opacity: 0
    &__link
      &._active
        text-align: center
        min-width: 250px
      &:hover
        color: #fff
    &__item._opened &__sub
      opacity: 1
      max-height: 100vh
      pointer-events: auto
      transition: max-height .5s ease-in, opacity .2s ease-in-out
    &__sub
      &-link
        text-align: center
