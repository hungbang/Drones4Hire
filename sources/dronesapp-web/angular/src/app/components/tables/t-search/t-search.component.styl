@import '../../../styles/settings/mixin.styl'

.t-search
  display: table
  width: 100%
  &__row
    display table-row
    &._head
      .t-search
        &__cell
          padding: 20px 8px
          color #fff
          &:first-child
            background #1f2532
          &:nth-child(2n+3)
            background #3fb6c0
          &:nth-child(2n)
            background #159aa5
  &__cell
    display table-cell
    text-align: center
    padding: 20px 10px
    font-size 1.6rem
    font-weight: 400
    color #454545
    text-transform: uppercase
    border-bottom 1px solid #b7b7b7
    width: 15%
    vertical-align: middle
    osans(400)
    &._title
      text-align: left
      width: 25%
    &:nth-child(2n)
      background #f6f6f6
  &__link
    osans()
    &._title
      display: inline-block
      margin-bottom: 7px
      margin-right: 7px
      color: #454545
      font-weight: 400

  &__color
    display: inline-block
    font-size: 1.2rem
    color: #fff
    osans(600)
    border-radius: 8px
    padding: 3px 10px
    margin-right: 7px
    margin-bottom: 7px
  &__title
    vam()
