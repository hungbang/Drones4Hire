@import '../../../styles/settings/variables.styl'
@import '../../../styles/settings/mixin.styl'

.t-project
  display: table
  width: 100%
  &__row
    display table-row
    &._head
      .t-project
        &__cell
          border: 0
          font-size: 1.6rem
          letter-spacing: 1px
          height: 75px
          vertical-align: middle
          color #fff
          &._name
            background: $gray1f
          &._bids
          &._bid-end
            background: #3fb6c0
          &._average-bids
          &._action
            background: #159aa5

  &__cell
    display table-cell
    text-align: center
    padding: 20px 10px
    vertical-align: middle
    font-size 1.6rem
    text-transform: uppercase
    border-bottom 1px solid #b7b7b7
    letter-spacing: 2px
    color: #1f2532

    &:nth-child(2n)
      background #f6f6f6

    &._name
      width: 33%
    &._bids
    &._average-bids
    &._bid-end
    &._action
      width: 16%

  &__actions
    display: flex
    justify-content: center

  &__action
    width: 24px
    height: 24px
    display flex
    justify-content center
    align-items center
    svg
      width: 20px
      height: 20px
      fill: #1f2532
    &-separator
      display inline-block
      vertical-align middle
      width 0
      height 24px
      margin 0 15px
      border-right: 1px solid $gray1f
    &[disabled]
      svg
        fill #8f8f8f

  &__link
    color: #32afff
    font-weight 600

  &__empty
    text-align center
    padding 1rem
    font-size 1.8rem
