@import '../../../styles/settings/variables.styl'
@import '../../../styles/settings/mixin.styl'

.modal-payment
  max-width 800px
  width 100%
  margin: 0 auto
  display flex
  flex-direction column
  min-height 150px
  text-align left
  position relative
  background-color #fff
  min-width: 450px

  &__header
    min-height: 3.5rem
    display: flex
    align-items: center
    background: $gray1f
    font-size 2.3rem
    font-weight 600
    position: relative
    color #fff
    padding 0.5rem 0.2rem 0.5rem 1rem

  &__content
    padding: 20px 25px
    font-size: 1.8rem
    &-text
      margin-bottom 20px
      &._loading
        font-weight 300
        text-align center
        color $blueC7
        font-size 1.8rem

  &__controls
    text-align center
    margin-top 25px

  &__close
    width: 3.4rem
    height: 3.4rem
    position: relative
    cursor: pointer
    margin-left auto
    &:after
    &:before
      width: 50%
      height: 2px
      hv()
      background: #ffffff
    &:after
      transform: rotate(45deg)
    &:before
      transform: rotate(-45deg)
