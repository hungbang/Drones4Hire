customScroll_2(width = 15px)
  &::-webkit-scrollbar
    width: width
  &::-webkit-scrollbar-thumb
    background #656d78
    width width
    height: width
    border-radius 8px
  &::-webkit-scrollbar-track
    width width
    background #656d78
    box-shadow: 7px 0 0 #fff inset,
    -7px 0 0 #fff inset
  @media only screen and (max-width: 740px)
    &::-webkit-scrollbar-thumb
      border-left 3px solid #fff
      border-right 3px solid #fff
