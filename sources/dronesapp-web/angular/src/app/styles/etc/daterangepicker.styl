.daterangepicker.ltr
  display: none
.daterangepicker.show-calendar.ltr
  font-size: 1.4rem
  display: none
  padding: 10px 15px !important
  border: 1px solid #e1e1e1
  .ranges
    text-align: right
    float: none

  select
    height: 30px
    padding: 0 10px
    border-radius: 4px
    width: auto
    border: 1px solid #e1e1e1
    cursor: pointer
    font-size: 1.4rem
  .calendar
    td
      height: 28px
      width: 40px
      vertical-align: middle
  .daterangepicker-cancel
    display: none
  .applyBtn
    margin: 5px 0 0
  .daterangepicker_input
    input
      padding: 0 10px
      height: 38px
      font-size: 1.4rem

@media screen and (max-width: 720px)
  .daterangepicker.show-calendar.ltr
    width: auto
