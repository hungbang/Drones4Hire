<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.drones4hire.dronesapp.dbaccess.dao.mappers.ServiceMapper">

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
          INSERT
          INTO Drones4Hire.SERVICES (NAME)
          VALUES (
            #{name}
          )
        ]]>
    </insert>

    <sql id="getServices">
        <![CDATA[
          SELECT
	          S.ID AS SERVICE_ID,
	          S.NAME AS SERVICE_NAME,
	          SC.ID AS SERVICE_CATEGORY_ID,
	          SC.NAME AS SERVICE_CATEGORY_NAME,
	          SC.ORDER AS SERVICE_CATEGORY_ORDER,
	          SC.MODIFIED_AT AS SERVICE_CATEGORY_MODIFIED_AT,
	          SC.CREATED_AT AS SERVICE_CATEGORY_CREATED_AT
	          S.MODIFIED_AT AS SERVICE_MODIFIED_AT,
	          S.CREATED_AT AS SERVICE_CREATED_AT
          FROM
	          Drones4Hire.SERVICES S
          LEFT JOIN
              Drones4Hire.SERVICE_CATEGORIES SC
          ON
              S.SERVICE_CATEGORY_ID = SC.ID
        ]]>
    </sql>

    <select id="getServiceById" resultMap="ServiceResultMap">
        <include refid="getServices"/>
        <![CDATA[
          WHERE
          S.ID = #{id}
        ]]>
    </select>

    <select id="getAllServices" resultMap="ServiceResultMap">
        <include refid="getServices"/>
    </select>

    <update id="updateService">
        <![CDATA[
          UPDATE
         	 Drones4Hire.SERVICES
          SET
          	 NAME = #{name},
          WHERE
			 ID = #{id}
        ]]>
    </update>

    <delete id="deleteService">
        <![CDATA[
          DELETE
          FROM Drones4Hire.SERVICES
          WHERE
          ID = #{id}
        ]]>
    </delete>

    <resultMap id="ServiceResultMap" type="com.drones4hire.dronesapp.models.db.services.Service" autoMapping="false">
        <id property="id" column="SERVICE_ID"/>
        <result property="name" column="SERVICE_NAME"/>
        <result property="modifiedAt" column="SERVICE_MODIFIED_AT" />
        <result property="createdAt" column="SERVICE_CREATED_AT" />
        <association property="category" resultMap="com.drones4hire.dronesapp.dbaccess.dao.mappers.ServiceCategoryMapper.ServiceCategoryResultMap"/>
    </resultMap>

</mapper>